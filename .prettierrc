{
  "trailingComma": "none",
  "jsxSingleQuote": true,
  "singleQuote": true,
  "endOfLine": "lf",
  "printWidth": 100,
  "semi": true,
  "tabWidth": 2,
  "useTabs": false,
  "arrowParens": "always",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "proseWrap": "always",
  "overrides": [
    { "files": "*.md", "options": { "proseWrap": "preserve" } },
    { "files": ["*.yml", "*.yaml"], "options": { "singleQuote": false } }
  ]
}
