# Gestor de paquetes (NPM/PNPM compatible)

# Versiones exactas para reproducibilidad
save-exact=true

# Peer dependencies automáticas
auto-install-peers=true

# Validar versión de Node según engines
engine-strict=true

# Registro oficial
registry=https://registry.npmjs.org/

# PNPM: elevar dependencias (compatibilidad)
shamefully-hoist=true

# === SEGURIDAD: Protección Supply Chain ===
# Bloquear ejecución de scripts post-install
ignore-scripts=true

# No permitir paquetes obsoletos
legacy-peer-deps=false
